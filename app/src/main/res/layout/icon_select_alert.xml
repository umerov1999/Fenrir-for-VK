<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="2dp"
        android:text="@string/select_icon"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="2dp"
        android:text="@string/default_icon"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/default_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:src="@mipmap/ic_launcher"
        android:stateListAnimator="@animator/clicked" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="2dp"
        android:text="@string/custom_icon"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/blue_icon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/fenrir_blue"
            android:stateListAnimator="@animator/clicked" />

        <ImageView
            android:id="@+id/green_icon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/fenrir_green"
            android:stateListAnimator="@animator/clicked" />

        <ImageView
            android:id="@+id/violet_icon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/fenrir_violet"
            android:stateListAnimator="@animator/clicked" />

        <ImageView
            android:id="@+id/yellow_icon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/fenrir_yellow"
            android:stateListAnimator="@animator/clicked" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/red_icon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/fenrir_red"
            android:stateListAnimator="@animator/clicked" />

        <ImageView
            android:id="@+id/white_icon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/fenrir_white"
            android:stateListAnimator="@animator/clicked" />

        <ImageView
            android:id="@+id/black_icon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/fenrir_black"
            android:stateListAnimator="@animator/clicked" />

        <ImageView
            android:id="@+id/vk_official"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/vk_official"
            android:stateListAnimator="@animator/clicked" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lineage_icon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="25"
            android:padding="8dp"
            android:src="@mipmap/fenrir_lineage"
            android:stateListAnimator="@animator/clicked" />

    </LinearLayout>

</LinearLayout>
